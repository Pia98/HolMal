<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--TODO improve styling-->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp">
    <TextView
        android:id="@+id/nameOfList"
        android:layout_width="@dimen/widthHalfScreen"
        android:layout_height="@dimen/listNameHight"
        android:text="@+id/nameOfList"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccentSilver"
        />
    <TextView
        android:id="@+id/categoryOfList"
        android:layout_width="@dimen/widthHalfScreen"
        android:layout_height="@dimen/listAmountHight"
        android:text="@+id/categoryOfList"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/nameOfList"
        android:background="@color/colorAccentSilver"
        />

    <TextView
        android:id="@+id/amountItemsOnList"
        android:layout_width="@dimen/widthHalfScreen"
        android:layout_height="@dimen/listAmountHight"
        android:text="@+id/amountItemsOnList"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/categoryOfList"
        android:background="@color/colorAccentSilver"/>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>