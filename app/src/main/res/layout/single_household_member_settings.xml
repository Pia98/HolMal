<?xml version="1.0" encoding="utf-8"?>

<!--this view helps represent the household members in a list in settings -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingHouseholdMember"
    >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/personColour"
        android:src="@drawable/ic_square_settings"
        android:layout_marginStart="@dimen/colourMarginStart"
        android:contentDescription="@string/colourDescription" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personName"
        android:layout_marginStart="@dimen/memberNameMargin"
        android:text="@+id/itemName"
        />
</RelativeLayout>