<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> this puts a top bar with AppName -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="android:colorButtonNormal">@color/colorAccentSilver</item>
        
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:editTextColor">@color/colorFont</item>
    </style>

    <style name="blueActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="blueTabsBar" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="tabIndicatorColor">@color/colorPersonLightBlue</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:background">@color/colorTabs</item>
        <item name="tabSelectedTextColor">@color/colorBackground</item>
    </style>


</resources>
